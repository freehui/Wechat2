<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_fragment_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/fujinren_layout"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/item_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dip" >

            <ImageView
                android:id="@+id/dh"
                android:layout_width="22dip"
                android:layout_height="22dip"
                android:layout_marginLeft="15dip"
                android:background="@drawable/find_friends" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:text="朋友圈"
                android:textColor="@color/black_text"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/fujinren_layout"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/item_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dip" >

            <ImageView
                android:id="@+id/dh"
                android:layout_width="22dip"
                android:layout_height="22dip"
                android:layout_marginLeft="15dip"
                android:background="@drawable/find_erweima" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:text="扫一扫"
                android:textColor="@color/black_text"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="@color/background_fragment_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/fujinren_layout"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/item_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dip" >

            <ImageView
                android:id="@+id/dh"
                android:layout_width="22dip"
                android:layout_height="22dip"
                android:layout_marginLeft="15dip"
                android:background="@drawable/find_yaoyiyao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:text="摇一摇"
                android:textColor="@color/black_text"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/fujinren_layout"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/item_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dip" >

            <ImageView
                android:id="@+id/dh"
                android:layout_width="22dip"
                android:layout_height="22dip"
                android:layout_marginLeft="15dip"
                android:background="@drawable/find_fujin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:text="附近的人"
                android:textColor="@color/black_text"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/background_fragment_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/fujinren_layout"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/item_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dip" >

            <ImageView
                android:id="@+id/dh"
                android:layout_width="22dip"
                android:layout_height="22dip"
                android:layout_marginLeft="15dip"
                android:background="@drawable/find_piaoliuping" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:text="漂流瓶"
                android:textColor="@color/black_text"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/background_fragment_gray" />

</LinearLayout>